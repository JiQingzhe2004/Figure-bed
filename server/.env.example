# 服务器端口
PORT=5000

# 数据库配置
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=figure_bed

# JWT 密钥 (用于用户认证)
JWT_SECRET=your_very_strong_jwt_secret_key

# 其他配置 (例如云存储凭证等)
# CLOUDINARY_URL=...

# CORS配置
# ------------------------------
# 允许的来源，多个来源用逗号分隔，如：http://localhost:3000,http://localhost:8080
# 使用*允许所有来源，但不能与credentials=true一起使用
CORS_ALLOW_ORIGIN=*

# 是否允许携带凭证(cookies, HTTP认证)，设为true时origin不能为*
# 由于使用JWT认证，我们可以设置为false
CORS_ALLOW_CREDENTIALS=false

# 允许的HTTP请求方法，多个方法用逗号分隔
CORS_ALLOW_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE

# 允许的HTTP请求头，多个头用逗号分隔
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With

# 公开的响应头，多个头用逗号分隔
CORS_EXPOSED_HEADERS=Content-Range,X-Total-Count

# 预检请求的缓存时间（秒）
CORS_MAX_AGE=86400
